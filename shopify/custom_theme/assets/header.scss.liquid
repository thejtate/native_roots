.site-header {
  line-height: 1.2;
  text-transform: uppercase;
  position: relative;
  z-index: 5;
  -moz-box-shadow: 0 0 11px -3px #000;
  -webkit-box-shadow: 0 0 11px -3px #000;
  box-shadow: 0 0 11px -3px #000;
  padding: 0;
  height: 125px;
  font-size: 14px;
  background-color: #2a2a2a;
  background-image: url({{ 'bg-page.png' | asset_url }});
  
  &:before {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    width: 385px;
    background-image: url('data:image/svg+xml;base64,');
    background-size: 100%;
    background-image: -webkit-gradient(linear, 100% 50%, 0% 50%, color-stop(0%, rgba(42, 42, 42, 0.8)), color-stop(70%, rgba(42, 42, 42, 0.8)), color-stop(100%, rgba(0, 0, 0, 0)));
    background-image: -moz-linear-gradient(right, rgba(42, 42, 42, 0.8) 0%, rgba(42, 42, 42, 0.8) 70%, rgba(0, 0, 0, 0) 100%);
    background-image: -webkit-linear-gradient(right, rgba(42, 42, 42, 0.8) 0%, rgba(42, 42, 42, 0.8) 70%, rgba(0, 0, 0, 0) 100%);
    background-image: linear-gradient(to left, rgba(42, 42, 42, 0.8) 0%, rgba(42, 42, 42, 0.8) 70%, rgba(0, 0, 0, 0) 100%);
  }
  
  .logo {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
    bottom: 0;
    width: 215px;
    height: 100%;
    background: #2a2a2a;
    text-align: center;
    padding-top: 18px;

    a {
      -moz-transition: opacity 0.3s;
      -o-transition: opacity 0.3s;
      -webkit-transition: opacity 0.3s;
      transition: opacity 0.3s;

      &:hover {
        opacity: .7;
      }
    }
  }
  
  ul {
    margin: 0;
    padding: 0;
    
    li {
      list-style: none;
      margin: 0;
      padding: 0;
    }
  }
  
  .nav {
    bottom: 0;
    right: 0;
    left: 215px;
    width: 100%;
    height: 78px;
    position: absolute;
    z-index: 1;
    background: #ebebeb;
    
    & > ul.menu {
    
      li {
        display: inline-block;
        vertical-align: middle;
        position: relative;

        &:hover {
        
          & > a {
            color: #fff;
            background: #3caf49;
          }
          
          & > ul {
            visibility: visible;
            opacity: 1;
            -moz-transform: translate(0, -10px);
            -ms-transform: translate(0, -10px);
            -webkit-transform: translate(0, -10px);
            transform: translate(0, -10px);
          }
        }
      }
      
      & > li > a.site-nav--active:before {
        content: "";
        display: block;
        position: absolute;
        right: 0;
        bottom: 0;
        left: 0;
        border-top: 10px solid #3caf49;
      }
      
      a {
        height: 78px;
        display: block;
        color: #484848;
        -moz-transition: all 0.3s;
        -o-transition: all 0.3s;
        -webkit-transition: all 0.3s;
        transition: all 0.3s;
        text-decoration: none;
        padding: 32px 12px;
      }
      
      ul {
        visibility: hidden;
        opacity: 0;
        -moz-transform: translate(0, 0);
        -ms-transform: translate(0, 0);
        -webkit-transform: translate(0, 0);
        transform: translate(0, 0);
        -moz-transition: all 0.3s;
        -o-transition: all 0.3s;
        -webkit-transition: all 0.3s;
        transition: all 0.3s;
        border-top: 10px solid #3caf49;
        position: absolute;
        top: 100%;
        left: 0;
        width: 172px;
        background: #2a2a2a;
        
        li {
          padding: 0 12px;
          display: block;
          -moz-transition: all 0.3s;
          -o-transition: all 0.3s;
          -webkit-transition: all 0.3s;
          transition: all 0.3s;
          
          &:hover {
            background: #3d3d3d;
          }
        }
        
        a {
          border-bottom: 1px solid #3d3d3d;
          padding: 8px 0;
          height: auto;
          color: #fff;
          
          &:hover {
            background: transparent;
          }
        }
      }
    }
  }
  
  .navigation {
    right: 0;
    bottom: 0;
    position: absolute;
    z-index: 1;

    ul {
      
      &:before, &:after {
        display: table;
        content: "";
        line-height: 0;
      }
      
      &:after {
        clear: both;
      }
    }

    li {
      float: left;
      width: 105px;

      &:first-child a {
        border-left: none;
      }

      &:last-child a {
        border-right: none;
      }
    }

    a {
      background: #3caf49;
      height: 78px;
      display: block;
      color: #fff;
      text-align: center;
      border-right: 1px solid #5dc769;
      border-left: 1px solid #1d8529;
      text-decoration: none;
      -moz-transition: background 0.3s;
      -o-transition: background 0.3s;
      -webkit-transition: background 0.3s;
      transition: background 0.3s;
      padding: 23px 26px;

      &:hover {
        background: #1d8529;
      }
    }
  }
  
  .social-menu {
    top: 13px;
    right: 26px;
        position: absolute;

    ul {

      li {
        margin: 0 0 0 13px;
        display: inline-block;
        vertical-align: middle;

        &:first-child {
          margin-left: 0;
        }
        
        &:nth-child(1) a {
        height: 17px;
  width: 8px;
  background:  url({{ 'icons-s7df9279545.png' | asset_url }}) -58px 0 no-repeat;
      }

      &:nth-child(2) a {
        height: 14px;
  width: 19px;
  background:  url({{ 'icons-s7df9279545.png' | asset_url }}) -19px -266px no-repeat;
      }

      &:nth-child(3) a {
        height: 15px;
  width: 20px;
  background:  url({{ 'icons-s7df9279545.png' | asset_url }}) -38px -266px no-repeat;
      }

      &:nth-child(4) a {
        height: 17px;
  width: 16px;
  background:  url({{ 'icons-s7df9279545.png' | asset_url }}) -42px 0 no-repeat;
      }
      }

      a {
        display: block;
        -moz-transition: opacity 0.3s;
  -o-transition: opacity 0.3s;
  -webkit-transition: opacity 0.3s;
  transition: opacity 0.3s;

        &:hover {
          opacity: .7;
        }
        
        span {
          display: none !important;
        }
      }
    }
  }
}